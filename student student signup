    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      (function(){
        const pwd = document.getElementById('id_password');
        const cpwd = document.getElementById('id_confirm_password');
        const t1 = document.getElementById('togglePassword');
        const t2 = document.getElementById('toggleConfirmPassword');
        function toggle(input, btn){
          if(!input || !btn) return;
          const icon = btn.querySelector('i');
          btn.addEventListener('click', function(){
            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
            input.setAttribute('type', type);
            if(icon){ icon.classList.toggle('fa-eye'); icon.classList.toggle('fa-eye-slash'); }
          });
        }
        toggle(pwd, t1);
        toggle(cpwd, t2);
      })();
    </script>
